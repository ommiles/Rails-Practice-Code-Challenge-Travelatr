<h1><%= @destination.name%></h1>

<h1>Featured Posts <%= link_to @destination.featured_post.title, post_path(@destination.featured_post) %></h1>

<%@destination.recent_posts.each do |post|%>
    <li><%=post.title%></li>
    <li><%=post.content%></li>
    <li><%=post.likes%></li>
<%end%>

<h3><%= @destination.average_age %></h3>
